{
	"bracketSpacing": true,
	"semi": true,
	"trailingComma": "es5",
	"printWidth": 120,
	"useTabs": true,
	"overrides": [
		{
			"files": ["*.html"],
			"options": {
				"parser": "html"
			}
		},
		{
			"files": ["*.css"],
			"options": {
				"parser": "css"
			}
		},
		{
			"files": ["*.json"],
			"options": {
				"parser": "json"
			}
		},
		{
			"files": [".eslintrc", ".prettierrc"],
			"options": {
				"parser": "json"
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"parser": "markdown"
			}
		}
	]
}
